{
  "displayName": "unit",
  "rootDir": ".",
  "testMatch": ["<rootDir>/{apps,libs}/**/*.spec.ts"],
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js", "json"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage/unit",
  "collectCoverageFrom": ["<rootDir>/{apps,libs}/**/*.spec.ts"],
  "moduleNameMapper": {
    "^@grpc-types/(.*)$": "<rootDir>/libs/types/grpc/$1",
    "^@amqp-types/(.*)$": "<rootDir>/libs/types/amqp/$1",
    "^@generated/(.*)$": "<rootDir>/libs/generated/$1",
    "^@utils/(.*)$": "<rootDir>/libs/utils/$1",
    "^@exceptions/(.*)$": "<rootDir>/libs/exceptions/$1",
    "^@micro-services/(.*)$": "<rootDir>/libs/micro-services/$1"
  }
}