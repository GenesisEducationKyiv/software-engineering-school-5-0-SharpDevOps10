{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json"
  },
  "projects": {
    "email": {
      "type": "application",
      "root": "apps/email",
      "entryFile": "main",
      "sourceRoot": "apps/email/src"
    },
    "subscription": {
      "type": "application",
      "root": "apps/subscription",
      "entryFile": "main",
      "sourceRoot": "apps/subscription/src"
    },
    "weather": {
      "type": "application",
      "root": "apps/weather",
      "entryFile": "main",
      "sourceRoot": "apps/weather/src"
    },
    "notification": {
      "type": "application",
      "root": "apps/notification",
      "entryFile": "main",
      "sourceRoot": "apps/notification/src"
    },
    "gateway": {
        "type": "application",
        "root": "apps/gateway",
        "entryFile": "main",
        "sourceRoot": "apps/gateway/src"
    }
  }
}
